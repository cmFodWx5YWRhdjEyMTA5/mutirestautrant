<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layoutSubmitOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen8"
        android:background="@drawable/bg_boder_item"
        android:orientation="vertical"
        android:padding="@dimen/dimen8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen30"
                    android:text="OrderSumary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:layout_marginTop="@dimen/dimen8"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No items"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:id="@+id/tvItemNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="1"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="total_amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="$ 6.95"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lblOrderSumary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:layout_marginTop="@dimen/dimen8"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="(*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@drawable/bg_text_view"
                    android:padding="@dimen/dimen8"
                    android:textSize="@dimen/dimen14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="(*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@drawable/bg_text_view"
                    android:inputType="phone"
                    android:padding="@dimen/dimen8"
                    android:textSize="@dimen/dimen14sp" />

                <LinearLayout
                    android:id="@+id/layoutHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen8"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen8"
                            android:text=" (*)"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen14sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:background="@drawable/bg_text_view"
                        android:inputType="text"
                        android:padding="@dimen/dimen8"
                        android:textSize="@dimen/dimen14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen8"
                            android:text="address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen8"
                            android:text=" (*)"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen14sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:background="@drawable/bg_text_view"
                        android:inputType="text"
                        android:padding="@dimen/dimen8"
                        android:textSize="@dimen/dimen14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblPaymentMethodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="payment_method_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text=" (*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lblPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@drawable/bg_text_view"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:paddingBottom="@dimen/dimen8"
                    android:paddingLeft="@dimen/dimen8"
                    android:paddingRight="@dimen/dimen8"
                    android:paddingTop="@dimen/dimen8"
                    android:text="paypal_payment"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:id="@+id/lblPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text="policy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="(*) "
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="mandatory_field"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btnSubmitOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@color/puperhuy"
                    android:padding="@dimen/dimen8"
                    android:text="order_now"
                    android:textColor="@color/whitehuy"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
